<div id="credibility" class="jumbotron jumbotron-fluid my-0 p-0 d-flex">
    <div class="row">
        {% for block in section.blocks %}
        <div class="col-4 d-flex align-items-center">
            <img src="{{ block.settings.image | img_url: '100x100' }}">
            <div class="ml-4 my-0">
                <h6>{{ block.settings.title }}</h6>
                <h6>
                    <small class="text-muted">{{ block.settings.subtitle }}</small>
                </h6>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<style>
    #credibility .row {
        display: flex;
        align-items: center;
        overflow-x: auto;
        margin: auto;
        flex-wrap: nowrap;
        padding: 64px 0px;
    }

    #credibility .col-4 {
        min-width: 400px;
        max-width: 400px;
    }
</style>

{% schema %}
{
  "name":"Credibility",
  "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
            {
                "id": "title",
                "type": "text",
                "label": "Title"
            },
            {
                "id": "subtitle",
                "type": "text",
                "label": "Subtitle"
            },
            {
                "type":"image_picker",
                "id":"image",
                "label":"Image"
            }
        ]
      }
    ],
  "presets":[
    {
        "name":"Credibility",
        "category":"Store Information"
    }
  ]
}
{% endschema %}